<%# <div class="container"> %>
  <div>
    <div>
      <% if @profile.reviews.exists?(user_id: current_user.id) %>
        <p>You have already submitted a review.</p>
      <% else %>
        <%= simple_form_for ([@profile, @review]), data: {controller: "submit" } do |f| %>
          <%= f.input :content, label: "Send a message" %>
          <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", input_html: {data: { controller: "star-rating", action: "click->form-submit#submit"} }  %>
          <%= f.submit "Send your review"  %>
        <% end %>
      <% end %>
    </div>
  </div>
<%# </div> %>
