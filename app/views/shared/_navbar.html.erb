<div class="navbar"
      data-controller="navbar-dropdown"
      data-navbar-dropdown-target="navbar">
  <div class="container-nav">
    <%= link_to root_path, class: "navbar-brand" do %>
      <img src="https://res.cloudinary.com/dfipoufmj/image/upload/v1686933098/Untitled-2_2_saug3b.png" alt="">
    <% end %>

    <button class="button navbar-bars"
            data-navbar-dropdown-target="navbarBars"
            data-action="click->navbar-dropdown#openDropdown">
      button
    </button>

    <div class="navbar-collapse" data-navbar-dropdown-target="navbarCollapse">
        <% if user_signed_in? %>
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "About Us", about_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Dashboard", "/dashboard", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <p>Hi, <%= current_user.nickname %></p>
          </li>
          <li>
            <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "button" %>
          </li>
        </ul>
        <% else %>
          <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "About Us", about_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "button" %>
          </li>
        </ul>

        <% end %>
      </ul>
    </div>
  </div>
</div>
