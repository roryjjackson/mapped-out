<div class="navbar" data-controller="navbar-dropdown"
      data-navbar-dropdown-target="navbar">
  <div class="navbar-fluid" data-navbar-dropdown-target="navbarFluid">

    <div class="nav-item logo">
      <h5><%= link_to "MappedOut.", root_path, class: "nav-link" %></h5>
    </div>

    <button class="button navbar-menu"
            data-navbar-dropdown-target="navbarMenu"
            data-action="click->navbar-dropdown#openDropdown">
      <i class="fa-solid fa-bars"></i>
    </button>

    <% if user_signed_in? %>
      <div class="navbar-content" data-navbar-dropdown-target="navbarContent">
        <div class="navbar-container">
          <div class="nav-item">
            <h5><%= link_to "Home", root_path, class: "nav-link" %></h5>
          </div>
          <div class="nav-item">
            <h5><%= link_to "Contact", new_enquiry_path, class: "nav-link" %></h5>
          </div>
          <div class="nav-item">
            <h5><%= link_to "About Us", about_path, class: "nav-link" %></h5>
          </div>
          <div class="nav-item">
            <h5><%= link_to "Dashboard", dashboard_path, class: "nav-link" %></h5>
          </div>
        </div>
      </div>
      <div class="navbar-content" data-navbar-dropdown-target="navbarContent">
        <h5 class="devise-btn"><%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "button" %></h5>
      </div>
    <% else %>
      <div class="navbar-content" data-navbar-dropdown-target="navbarContent">
        <div class="navbar-container">
          <div class="nav-item">
            <h5><%= link_to "Home", root_path, class: "nav-link" %></h5>
          </div>
          <div class="nav-item">
            <h5><%= link_to "About Us", about_path, class: "nav-link" %></h5>
          </div>
          <div class="nav-item">
            <h5><%= link_to "Contact", new_enquiry_path, class: "nav-link" %></h5>
          </div>
        </div>
      </div>
      <div class="navbar-content" data-navbar-dropdown-target="navbarContent">
        <div class="devise-nav-btn">
          <h5 class="devise-btn"><%= link_to "Log In", new_user_session_path, class: "button" %></h5 class="devise-btn">
          <h5 class="devise-btn"><%= link_to "Sign Up", new_user_registration_path, class: "button border" %></h5 class="devise-btn">
        </div>
      </div>
    <% end %>
  </div>
</div>
