<div class="navbar" data-controller="navbar-dropdown"
      data-navbar-dropdown-target="navbar">
  <div class="navbar-fluid">


    <%= link_to root_path, class: "navbar-brand" do %>
      <img src="https://res.cloudinary.com/dfipoufmj/image/upload/v1686933098/Untitled-2_2_saug3b.png" alt="">
    <% end %>

    <button class="button navbar-bars"
            data-navbar-dropdown-target="navbarMenu"
            data-action="click->navbar-dropdown#openDropdown">
      <i class="fa-solid fa-bars"></i>
    </button>

    <div class="navbar-content" data-navbar-dropdown-target="navbarContent">
      <% if user_signed_in? %>
        <div class="navbar-container">
          <div class="nav-item">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </div>
          <div class="nav-item">
            <%= link_to "About Us", about_path, class: "nav-link" %>
          </div>
          <div class="nav-item">
            <%= link_to "Dashboard", dashboard_path, class: "nav-link" %>
          </div>
          <div>
            <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "button" %>
          </div>
        </div>
      <% else %>
        <div class="navbar-container">
          <div class="nav-item">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </div>
          <div class="nav-item">
            <%= link_to "About Us", about_path, class: "nav-link" %>
          </div>
          <div>
            <%= link_to "Log In", new_user_session_path, class: "button" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
