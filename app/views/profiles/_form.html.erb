<div class="profile-form-container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-8">
      <%= simple_form_for(@profile) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">

          <div class="form-input">
            <%= f.input :name, required: true, label: "What is your name? Use an alternate name or put 'Anonymous' if you would prefer to do so" %>
          </div>
          <div class="form-input">
            <%= f.input :title, required: true, label: "What is your current job title?" %>
          </div>
          <div class="form-input">
            <%= f.input :photos, as: :file, input_html: { multiple: true }, required: true, label: "Please upload up to 4 photos that represent what you do" %>
          </div>
          <div class="form-input">
            <%= f.input :summary, required: true, label: "Give a brief summary on what your role entails.", class: "text-box" %>
          </div>
          <div class="form-input">
            <%= f.input :personal_background, required: true, label: "What is your personal background? Your education, interests etc...", class: "text-box" %>
          </div>
          <div class="form-input">
            <%= f.input :hours, required: true, label: "What hours do you typically work on a daily basis?" %>
          </div>
          <div class="form-input">
            <%= f.input :time_off, required: true, label: "How much time per year to you get to switch off completely?", class: "text-box" %>
          </div>
          <div class="form-input">
            <%= f.input :compensation, required: true, label: "How are you compensated for your work? Salary, bonuses etc. Provide as much details as you're willing to give.", class: "text-box" %>
          </div>
          <div class="form-input">
            <%= f.input :entry_qualifications, label: "Are there any entry qualifications required for your role?" %>
          </div>
          <div class="form-input text">
            <%= f.input :side_hustles, label: "Do you have any side hustles on the go?" %>
          </div>
          <div class="form-input text">
            <%= f.input :q1, label: "What enjoyment does your position give you at work and in general life?" %>
          </div>
          <div class="form-input text">
            <%= f.input :q2, label: "What are your future prospects?" %>
          </div>
          <div class="form-input text">
            <%= f.input :q3, label: "How well does your background serve you in your industry?" %>
          </div>
          <div class="form-input text">
            <%= f.input :q4, label: "If you were recruiting for your own position, what would you look for?" %>
          </div>
          <div class="form-input text">
            <%= f.input :q5, label: "Are there any misconceptions about your industry?" %>
          </div>
          <div class="form-input text">
            <%= f.input :q9, label: "What difficulties have you faced and how did you overcome them?" %>
          </div>
          <div class="form-input text">
            <%= f.input :q6, label: "What gives you the greatest sense of pride in your life?" %>
          </div>
          <div class="form-input text">
            <%= f.input :q7, label: "What advice would you give to someone new to the industry?" %>
          </div>
          <div class="form-input text">
            <%= f.input :q8, label: "Can you provide any information on how to research your industry further?" %>
          </div>
          <div class="form-input">
            <%= f.input :address, required: true, label: "Where in the world are you located?",

                      input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
                      wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
            %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, class: "button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
