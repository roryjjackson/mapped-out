  <h1 class="subheader">Answer the questions instinctively</h1>

<%= simple_form_for([@profile, @questionnaire]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="questionnaire-form-input">
      <%= f.input :q1, as: :range, label: "Are you a home bird or would you like to fly the nest?", in: 1..5 %>
    </div>
    <div class="questionnaire-form-input">
      <%= f.input :q2, as: :range, label: "Do you like routine or would you like to be subject to constant change?", in: 1..5 %>
    </div>
    <div class="questionnaire-form-input">
      <%= f.input :q3, as: :range, label: "Would you like to have your own set place to sit and work or would you like to be constantly on the move?", in: 1..5 %>
    </div>
    <div class="questionnaire-form-input">
      <%= f.input :q4, as: :range, label: "Would you say you are an introvert or an extrovert?", in: 1..5 %>
    </div>
    <div class="questionnaire-form-input">
      <%= f.input :q5, as: :range, label: "Do you think you're more a 'live to work' or 'work to live' kinda person?", in: 1..5 %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Submit", class: "button" %>
  </div>
<% end %>
