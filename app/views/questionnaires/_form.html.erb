
<%= simple_form_for([@profile, @questionnaire]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :q1, as: :range, label: "Are you a home bird or fly the nest", in: 1..5 %>
    <%= f.input :q2, as: :range, label: "Orgnaised or like changing environments", in: 1..5 %>
    <%= f.input :q3, as: :range, label: "Artistic or analytical", in: 1..5 %>
    <%= f.input :q4, as: :range, label: "People person or solo", in: 1..5 %>
    <%= f.input :q5, as: :range, label: "Gay ro straight", in: 1..5 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
